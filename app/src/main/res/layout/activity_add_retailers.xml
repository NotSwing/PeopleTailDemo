<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRetailers">


    <Button
        android:id="@+id/btn_back"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:onClick="retailBackButton"
        android:background="@drawable/back_icon" />

    <TextView
        android:id="@+id/txt_retailers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/surface02"
        android:text="Add Retailers"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/add"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        />

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/surface"
        android:layout_below="@+id/txt_retailers"
        android:layout_marginTop="25dp"
        android:hint="Search for Retailers"
        android:textColor="@android:color/darker_gray"
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <Button
        android:id="@+id/searchbtn"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/search"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/txt_retailers"

        />


    <TextView
        android:id="@+id/text_popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_bar"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:textAllCaps="true"
        android:text="Popular Retailers "
        android:textSize="20sp"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_popular"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/surface02"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:text="All"/>

    <TextView

        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_popular"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/all"
        android:background="@drawable/surface02"
        android:drawableStart="@drawable/drop_arrow"

        />


    <Button
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:drawableTop="@drawable/wallamart"
        android:text="WallMart"
        android:layout_below="@+id/all"/>


    <Button
        android:id="@+id/img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/img1"
        android:layout_marginLeft="55dp"
        android:drawableTop="@drawable/hm"
        android:text="H  M"
        android:layout_below="@+id/all"/>

    <Button
        android:id="@+id/img3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:drawableTop="@drawable/amazon"
        android:text="Amazon"
        android:layout_below="@+id/img1"/>

    <Button
        android:id="@+id/img4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/img3"
        android:layout_marginLeft="55dp"
        android:drawableTop="@drawable/macys"
        android:text="Maycs"
        android:layout_below="@+id/img1"/>


    <Button
        android:id="@+id/img5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:drawableTop="@drawable/aesop"
        android:text="Aesop"
        android:layout_below="@+id/img3"/>

    <Button
        android:id="@+id/img6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/img5"
        android:layout_marginLeft="55dp"
        android:drawableTop="@drawable/ecco_logo"
        android:text="ECCO"
        android:layout_below="@+id/img4"/>


</RelativeLayout>