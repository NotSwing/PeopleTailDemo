<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="headphones1"
    tools:context=".Challenge">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="408dp"
        android:layout_height="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView6"

                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:scaleType="fitXY"
                android:scaleX="1.1"
                android:scaleY="1.2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/bottombar" />

            <ImageView
                android:id="@+id/troph"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageView6"
                app:layout_constraintStart_toEndOf="@+id/fab1"
                app:layout_constraintTop_toTopOf="@+id/fab1"
                app:srcCompat="@drawable/troph" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Challenge"
                app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fab1"
                app:layout_constraintTop_toBottomOf="@+id/troph" />

            <ImageView
                android:id="@+id/home"
                android:layout_width="21dp"
                android:layout_height="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/fab1"
                app:layout_constraintStart_toStartOf="@+id/imageView6"
                app:layout_constraintTop_toTopOf="@+id/fab1"
                app:srcCompat="@drawable/home" />

            <TextView
                android:id="@+id/hometxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/fab1"
                app:layout_constraintStart_toStartOf="@+id/imageView6"
                app:layout_constraintTop_toBottomOf="@+id/home" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:clickable="true"
                android:src="@drawable/fab"
                android:visibility="visible"
                app:backgroundTint="#00FFFFFF"
                app:elevation="0dp"
                app:fabCustomSize="65dp"
                app:fabSize="normal"
                app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                app:layout_constraintEnd_toEndOf="@+id/imageView6"
                app:layout_constraintStart_toStartOf="@+id/imageView6"
                app:layout_constraintTop_toTopOf="parent"
                app:maxImageSize="72dp"
                app:rippleColor="#00FFFFFF" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/challengeDetailsNav"
        android:layout_width="419dp"
        android:layout_height="54dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ChallengetxtMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Challenge"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.33"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/backChallengeImg"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ChallengetxtMain"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="?attr/homeAsUpIndicator"
                android:onClick="onClick"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.navigation.NavigationView>


    <ImageView
        android:id="@+id/challegeDetailsPicutre"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleX="1.3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/challengeDetailsNav"
        app:srcCompat="@drawable/gooper" />

    <ScrollView
        android:layout_width="413dp"
        android:layout_height="1006dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/challegeDetailsPicutre">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="Sponsered By"
                android:textSize="20dp"
                android:textStyle="normal|bold" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="148dp"
                android:layout_height="108dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="#0CFFFFFF"
                app:srcCompat="@drawable/handm" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Friends, furry friends, family, and lovers — we’re better together! Show us what your together looks like. We want to see photos and videos capturing friends hanging out, fun family time, cute couples, people with their beloved pets… This challenge is all about the quality time we spend with other people."
                android:textSize="16dp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="40dp"
                android:text="Elegebility"
                android:textSize="20dp"
                android:textStyle="normal|bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/point1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="1."
                    android:textSize="16dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/point1txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="Each photo or video submitted to this challenge until 01 Jan 00:00 will take part. "
                    android:textSize="16dp"
                    android:textStyle="normal|bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/point2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="2."
                    android:textSize="16dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/point2txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="Upload as many relevant photos and videos as you want to increase your chances of winning. "
                    android:textSize="16dp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/point3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="3."
                    android:textSize="16dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/point3txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="All photos and videos get published under the Pexels License and can be used for free. "
                    android:textSize="16dp"
                    android:textStyle="normal|bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/prize"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:text="Prize"
                android:textSize="20dp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/prizeTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sony Digital Wireless Headphone, Model Wh L600 "
                android:textSize="16dp"
                android:textStyle="normal|bold" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="207dp"
                android:layout_height="206dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:contentDescription="headphones"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/headphone"
                tools:srcCompat="@drawable/headphone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="55dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="94dp"
                    android:layout_height="94dp"
                    app:srcCompat="@drawable/headphone" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="94dp"
                    android:layout_height="94dp"
                    android:contentDescription="headphones2"
                    app:srcCompat="@drawable/headphone2" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="94dp"
                    android:layout_height="94dp"
                    android:contentDescription="headphones3"
                    app:srcCompat="@drawable/headphone2" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>